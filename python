daftar_belajar = []

def tampilkan_menu():
    print("\n=== Aplikasi Daftar Belajar ===")
    print("1. Tambah daftar")
    print("2. Lihat daftar")
    print("3. Hapus daftar")
    print("4. Keluar")

def tambah_daftar():
    tugas = input("Masukkan materi yang ingin dipelajari: ")
    daftar_belajar.append(tugas)
    print("âœ“ Berhasil ditambahkan!")

def lihat_daftar():
    print("\n--- Daftar Belajar ---")
    if not daftar_belajar:
        print("Belum ada daftar.")
    else:
        for i, tugas in enumerate(daftar_belajar, 1):
            print(f"{i}. {tugas}")

def hapus_daftar():
    lihat_daftar()
    nomor = int(input("Pilih nomor yang akan dihapus: "))
    if 1 <= nomor <= len(daftar_belajar):
        dihapus = daftar_belajar.pop(nomor - 1)
        print(f"âœ“ '{dihapus}' berhasil dihapus!")
    else:
        print("Nomor tidak valid!")

while True:
    tampilkan_menu()
    pilihan = input("Pilih menu (1/2/3/4): ")

    if pilihan == "1":
        tambah_daftar()
    elif pilihan == "2":
        lihat_daftar()
    elif pilihan == "3":
        hapus_daftar()
    elif pilihan == "4":
        print("Terima kasih! Aplikasi ditutup.")
        break
    else:
        print("Pilihan tidak valid!")
